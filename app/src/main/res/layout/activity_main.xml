<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/img_logo" />


        <EditText
            android:id="@+id/nomeEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/custom_edit_text"
            android:hint="Usuário"
            android:fontFamily="@font/bowlby_one"
            android:textColorHint="@color/colorBackground"
            android:textSize="17sp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/senhaEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/custom_edit_text"
            android:hint="Senha"
            android:fontFamily="@font/bowlby_one"
            android:textColorHint="@color/colorBackground"
            android:textSize="17sp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/custom_button"
            android:onClick="logar"
            android:text="Entrar"
            android:fontFamily="@font/bowlby_one"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/ou"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#D913C5"
                android:gravity="center"
                android:text="ou"
                android:fontFamily="@font/bowlby_one"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_button_google"
            android:text="Entrar com Google"
            android:fontFamily="@font/bowlby_one"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/text_ou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Não tem uma conta?"
                android:fontFamily="@font/bowlby_one"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnCadastrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/colorBackground"
                android:onClick="cadastre_se"
                android:stateListAnimator="@null"
                android:text="Cadastre-se"
                android:fontFamily="@font/bowlby_one"
                android:textColor="#EBFF05"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>