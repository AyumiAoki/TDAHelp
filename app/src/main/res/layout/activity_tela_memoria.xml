<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/tela_memoria"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMemory"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        tools:context=".TelaMemoria">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="right"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconMemory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/img_memoria" />

                <TextView
                    android:id="@+id/text_memoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bowlby_one"
                    android:text="JOGO DA MEMÓRIA"
                    android:textColor="#FFFFFF"
                    android:textSize="21sp" />
            </LinearLayout>

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progresso"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="96dp"
            android:background="@color/colorCheck"
            android:max="6"
            android:progress="0"
            android:progressTint="@color/colorAccent"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textProgresso"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/bowlby_one"
                android:gravity="center"
                android:text="0/6"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textParabens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/bowlby_one"
                    android:gravity="center"
                    android:text="Parabéns!"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/textParabens2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/bowlby_one"
                    android:gravity="center"
                    android:text="Você tem uma boa memória, continue assim!"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_1"
                    android:layout_width="121dp"
                    android:layout_height="98dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@android:drawable/spinner_background"
                    android:backgroundTint="#3CCC0A"
                    android:fontFamily="@font/bowlby_one"
                    android:onClick="alterar"
                    android:stateListAnimator="@null"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button_2"
                    android:layout_width="121dp"
                    android:layout_height="98dp"
                    android:background="@android:drawable/spinner_background"
                    android:backgroundTint="@color/colorBackground"
                    android:fontFamily="@font/bowlby_one"
                    android:onClick="alterar"
                    android:stateListAnimator="@null"
                    android:text="2"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="128dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_3"
                    android:layout_width="121dp"
                    android:layout_height="98dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@android:drawable/spinner_background"
                    android:backgroundTint="#F22E2E"
                    android:fontFamily="@font/bowlby_one"
                    android:onClick="alterar"
                    android:stateListAnimator="@null"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button_4"
                    android:layout_width="121dp"
                    android:layout_height="98dp"
                    android:background="@android:drawable/spinner_background"
                    android:backgroundTint="#F0FF00"
                    android:fontFamily="@font/bowlby_one"
                    android:onClick="alterar"
                    android:stateListAnimator="@null"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_5"
                android:layout_width="121dp"
                android:layout_height="98dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@android:drawable/spinner_background"
                android:backgroundTint="#813E07"
                android:fontFamily="@font/bowlby_one"
                android:onClick="alterar"
                android:stateListAnimator="@null"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="121dp"
                android:layout_height="98dp"
                android:background="@android:drawable/spinner_background"
                android:backgroundTint="#FF00D2"
                android:fontFamily="@font/bowlby_one"
                android:onClick="alterar"
                android:stateListAnimator="@null"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnReiniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="96dp"
            android:background="@drawable/custom_button"
            android:drawableLeft="@drawable/ic_refresh_black_24dp"
            android:fontFamily="@font/bowlby_one"
            android:onClick="restart"
            android:scaleType="centerCrop"
            android:text="Reiniciar"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
    </LinearLayout>
</ScrollView>